@inherits LayoutComponentBase

<MudThemeProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Elevation="1" Color="Color.Primary">
        <MudText Typo="Typo.h6" Class="ml-3">Evaluador Excel - Verisure</MudText>
        <MudSpacer />
        <MudIconButton Icon="@Icons.Material.Filled.Logout" Color="Color.Inherit" OnClick="Logout" />
    </MudAppBar>
    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.Large" Class="mt-8">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

@code {
    [Inject] NavigationManager Navigation { get; set; }

    private void Logout()
    {
        // Simple logout: redirect to login and clear state (managed by Login logic)
        Navigation.NavigateTo("/login");
    }
}
